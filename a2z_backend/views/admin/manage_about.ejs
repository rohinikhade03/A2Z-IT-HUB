<%-include("navbar.ejs")%>

<form action="/admin/save_about" method="post" enctype="multipart/form-data">
    <div class="container-fluid">
        <div class="row">
            <div class="heading col-md-12">
                <h2>Manage What Do We do</h2>
            </div>
            <div class="col-md-8">
                <label>What we do Title</label>
                <input type="text" name="wdwd_title" class="form-control">
                <label>What we do Description</label>
                <input type="text" name="wdwd_description" class="form-control">
                <label>What we do Icon</label>
                <input type="text" name="wdwd_icon" class="form-control">
                <label>What we do Sub Title</label>
                <input type="text" name="wdwd_sub_title" class="form-control">
                <label>What we do Info</label>
                <input type="text" name="wdwd_info" class="form-control">
            </div>
            <div class="col-md-8">
                <label>Core Values Title</label>
                <input type="text" name="values_title" class="form-control">
                <label>Core Values Sub Title</label>
                <input type="text" name="values_sub_title" class="form-control">
                <label>Core Values Info</label>
                <input type="text" name="values_info" class="form-control">
                <label>Core Values Image</label>
                <input type="file" name="values_img" class="form-control">
            </div>
            <div class="col-md-12 text-center">
                <button class="btn btn-primary mt-3 mb-3">Save About </button>
            </div>

        </div>
    </div>
</form>

<!-- Table -->
 <div class="container-fluid bg-white p-4 shadow">
    <div class="row">
        <div class="subheading col-md-12 text-white">
            <h2>List of Manage What Do We do</h2>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr> 
                    <th>Action</th>
                    <th>SN</th>
                    <th>WDWD TITLE</th>
                    <th>WDWD Description</th>
                    <th>WDWD ICON</th>
                    <th>WDWD SUB TITLE</th>
                    <th>WDWD INFO</th>
                    <th>VALUES TITLE</th>
                    <th>VALUES SUB</th>
                    <th>VALUES INFO</th>
                    <th>IMAGE</th>
                </tr>
                <% for(var i=0;i<about_list.length;i++) { %>
                    <tr>
                        <td style="width: 3%; white-space: nowrap;">
                            
                            <a href="/admin/edit_about/<%=about_list[i].about_id%>"><button class="bg-info"><i class="fa fa-edit text-white"></i></button></a>
                            <a href="/admin/delete_about/<%=about_list[i].about_id%>" onclick="return confirm('ARE YOU SURE...?')"><button class="bg-danger"><i class="fa fa-trash text-white"></i></button></a>

                        </td>
                        <td><%=i+1%></td>
                        <td><%=about_list[i].wdwd_title%></td>
                        <td><%=about_list[i].wdwd_description%></td>
                        <td><%=about_list[i].wdwd_icon%></td>
                        <td><%=about_list[i].wdwd_sub_title%></td>
                        <td><%=about_list[i].wdwd_info%></td>
                        <td><%=about_list[i].values_title%></td>
                        <td><%=about_list[i].values_sub_title%></td>
                        <td><%=about_list[i].values_info%></td>
                        <td>
                            <img src="/uploads/about/<%=about_list[i].values_img%>" width="100px" height="100px">
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>
 </div>

