<%- include('navbar.ejs') %>

<form action="/admin/update_batch_cource" method="post" enctype="multipart/form-data">
    
    <div class="container p-4 bg-white">
        <div class="col-md-12 mb-2 text-center bg-dark p-2 text-white">
            <h3>Update Batch</h3>
        </div>
        <div class="row">
            <input type="hidden" name="batch_cource_id" value="<%=edit_cource_data.batch_cource_id%>">
            <div class="col-md-6 mt-3">
                Enter Cource Name 
                <input type="text" name="batch_cource_name" value="<%-edit_cource_data.batch_cource_name%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Cource Duration 
                <input type="text" name="cource_duration" value="<%-edit_cource_data.cource_duration%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Cource Time 
                <input type="time" name="cource_time" value="<%-edit_cource_data.cource_time%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Cource Date
                <input type="date" name="cource_date" value="<%-edit_cource_data.cource_date%>" class="form-control">
            </div>
            <div class="col-md-12 mt-3 text-center">
                <button class="btn btn-primary">Update Cource</button>
            </div>
        </div>
    </div>
</form>

<%- include('footer.ejs') %>