<%-include('navbar.ejs')%>

<div class="container bg-white p-3">
    <div class="row">
        <div class="col-md-12 mb-2 text-center bg-dark p-2 text-white">
            <h3>User Contact List</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-border">
                <tr>
                    <th></th>
                    <th>SNO</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                </tr>
                <% for(var i=0;i<contact_data.length;i++) { %>
                    <tr>
                        <td>
                            <a style="text-decoration: none;" href="/admin/delete_contact/<%=contact_data[i].contact_id%>"> 
                                <button class="btn btn-danger p-0 pe-2 pt-1 pb-1 ps-2"> <i class="fas fa-trash text-white"></i> </button> 
                            </a>
                        </td>
                        <td><%=i+1%></td>
                            <td><%=contact_data[i].name%></td>
                            <td><%=contact_data[i].email%></td>
                            <td><%=contact_data[i].subject%></td>
                            <td><%=contact_data[i].message%></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>

<%-include('footer.ejs')%>